{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "port": 8088
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    },
    "functions": {
      "port": 5001
    },
    "auth": {
      "port": 9099
    }
  },
  "functions": [
    {
      "source": "functions-v1",
      "codebase": "functions-v1",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "ignore": [
        "*.log",
        ".*",
        ".git",
        "coverage",
        "node_modules",
        "test"
      ]
    },
    {
      "source": "functions-v2",
      "codebase": "functions-v2",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "ignore": [
        "node_modules",
        ".*",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        "*.log",
        "coverage"
      ]
    }
  ]
}
