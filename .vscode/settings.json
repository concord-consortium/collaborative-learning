{
  "standard.enable": false,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/dist/**": true
  },
  "cSpell.words": [
    "authed",
    "autorun",
    "boundingbox",
    "canonicalize",
    "ccimg",
    "clazz",
    "commentable",
    "democlass",
    "elems",
    "firestore",
    "fbrtdb",
    "iframes",
    "jsxgraph",
    "mcimage",
    "mcimages",
    "mcsupports",
    "rollbar",
    "scroller",
    "subcollection",
    "subtab",
    "tablelink",
    "testid",
    "todos",
    "towle",
    "ulid",
    "undoable",
    "unlistener",
    "unlisteners",
    "wumps"
  ],

  // Editor {{{

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },

  // }}}

  // Files {{{

  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // }}}
}
