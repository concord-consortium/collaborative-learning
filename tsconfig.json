{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "paths": {
      "react-modal-hook": ["node_modules/@concord-consortium/react-modal-hook/dist"],
      "mobx-state-tree": ["node_modules/@concord-consortium/mobx-state-tree/dist"],
      // Because we are using typescript 4.9.5 but webpack 5+
      // there is a mismatch how the two handle the exports sections
      // of packages. Typescript 5 added a "bundler" moduleResolver which
      // handles the exports section the same as webpack 5+ but also
      // doesn't require extensions on the import paths.
      "@concord-consortium/codap-formulas/*": ["node_modules/@concord-consortium/codap-formulas/dist/*"]
    },
    "types": ["w3c-web-serial", "gtag.js"]
  },
  "include": ["src/**/*", "shared/*"],
  "exclude": ["**/node_modules", "**/.*/"]
}
