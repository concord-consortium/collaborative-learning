{
  "name": "collaborative-learning",
  "version": "0.0.3",
  "description": "Collaborative Learning environment",
  "main": "index.js",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server --inline --hot --content-base dist/",
    "build": "npm-run-all lint:build clean build:webpack",
    "build:webpack": "webpack --mode production --devtool false",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:build": "tslint -c tslint-build.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "tslint -c tslint-build.json --fix 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:all": "npm-run-all build test start",
    "test:coverage": "jest --coverage",
    "test:debug": "node --nolazy --inspect-brk ./node_modules/.bin/jest --runInBand --no-cache",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/collaborative-learning.git"
  },
  "author": "Concord Consortium",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concord-consortium/collaborative-learning/issues"
  },
  "homepage": "https://github.com/concord-consortium/collaborative-learning#readme",
  "devDependencies": {
    "@firebase/app-types": "^0.3.2",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.116",
    "@types/nock": "^9.3.0",
    "@types/query-string": "^6.1.0",
    "@types/react": "16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/slate": "^0.40.0",
    "@types/slate-plain-serializer": "^0.5.1",
    "@types/slate-react": "^0.18.0",
    "@types/superagent": "^3.8.4",
    "@types/uuid": "^3.4.4",
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.2",
    "nock": "^9.6.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "script-loader": "^0.7.2",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.1.4",
    "ts-loader": "^5.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "url-loader": "^1.1.1",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  },
  "dependencies": {
    "firebase": "5.4.2",
    "immutable": "^3.8.2",
    "initials": "^3.0.0",
    "jsonwebtoken": "^8.3.0",
    "jsxgraph": "^0.99.7",
    "lodash": "^4.17.11",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.8",
    "mobx-state-tree": "^3.3.0",
    "query-string": "^6.1.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "slate": "^0.40.2",
    "slate-plain-serializer": "^0.6.2",
    "slate-react": "^0.18.5",
    "superagent": "^3.8.3",
    "uuid": "^3.3.2"
  }
}
