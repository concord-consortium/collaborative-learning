{
  "name": "functions",
  "scripts": {
    "lint": "eslint \"src/**/*\"",
    "build": "./node_modules/typescript/bin/tsc",
    "serve": "npm run build && firebase emulators:start",
    "serve:functions": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy:all": "firebase deploy --only functions",
    "deploy:getImageData": "firebase deploy --only functions:getImageData",
    "deploy:postDocumentComment": "firebase deploy --only functions:postDocumentComment_v1",
    "logs": "firebase functions:log",
    "test": "ts-node node_modules/jest/bin/jest.js --detectOpenHandles"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^9.11.1",
    "firebase-functions": "^3.15.4"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.6.3",
    "@firebase/rules-unit-testing": "^1.3.15",
    "@firebase/util": "^1.3.0",
    "@types/jest": "^27.0.1",
    "@types/rewire": "^2.5.28",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.1",
    "firebase-functions-test": "^0.3.2",
    "jest": "^27.0.6",
    "rewire": "^5.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "utility-types": "^3.10.0"
  },
  "private": true
